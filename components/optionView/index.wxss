.modal-view-box {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  z-index: 3;
}

.modal-content-box {
  flex: 1;
  margin: 30rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.option-input {
  border:2px dashed #ddd;
  padding:20rpx;
  font-size:34rpx;
}

.option-content-box {
  margin-top: 20rpx;
}

.option-content-box > view {
  padding:10rpx 0;
  color:#999;
  border-bottom:1px dashed #ddd;
  font-size: 32rpx;
}

.btn-box {
  display:flex;
  align-items:center;
  justify-content:space-around;
  margin-top:20rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.btn-box > view {
  width: 200rpx;
  padding: 16rpx 0;
  box-shadow: 0 0 4rpx #999;
  text-align: center;
  border-radius: 8rpx;
}
.give-up-btn {
  background: #00d195;
}
.confirm-btn {
  background: #ff5d8e;
}